<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:textStyle="bold"
		android:textSize="25dp"
		android:text="Enter Price for Each Item" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<EditText android:layout_width="wrap_content" 
		    android:text="   0.00"
			android:inputType="numberDecimal" 
			android:id="@+id/itemInput"
			android:numeric="decimal" 
			android:layout_height="wrap_content">
		</EditText>
					<requestFocus></requestFocus>
		<Button android:text=" =>> " 
		    android:id="@+id/btnItem"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</Button>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<ScrollView
			   android:layout_height="195px" style="" 
			   android:layout_width="fill_parent" >
			   <TextView android:id="@+id/itemList" 
			    android:layout_height="200px" 
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="fill_parent"></TextView>
			</ScrollView>
			<TextView 
			    android:layout_height="wrap_content" 
			    android:text="tax"
			    android:id="@+id/tax"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="fill_parent"></TextView>
			<TextView 
			    android:layout_height="wrap_content" 
			    android:text="sub-total"
				android:id="@+id/subTot" 
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="fill_parent"></TextView>
		</LinearLayout>
	</LinearLayout>
		<TextView 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:textStyle="bold"
		android:textSize="25dp"
		android:text="Enter the Tip" />
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<EditText android:layout_width="wrap_content" 
		    android:text="   0.00"
			android:inputType="numberDecimal" 
			android:id="@+id/tipInput"
			android:numeric="decimal" 
			android:layout_height="wrap_content">
			<requestFocus></requestFocus>
		</EditText>
		<Button 
		    android:text=" => " 
		    android:id="@+id/btnTip"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
			</Button>

		<TextView android:layout_height="wrap_content" 
		    android:id="@+id/tipShow"
		    android:text="0.00"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent"></TextView>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView 
		    android:layout_height="wrap_content" 
		    android:textStyle="bold"
		    android:textSize="25dp"
		    android:text="Total"
		    android:paddingRight="100px"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"></TextView>
		<TextView 
		    android:layout_height="wrap_content" 
		    android:textStyle="bold"
		    android:textSize="25dp"
		    android:text="0.00"
			android:id="@+id/total" 
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"></TextView>
    </LinearLayout>
	<Button android:text="Reset" 
	        android:id="@+id/reset1" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"></Button>
	
</LinearLayout>
