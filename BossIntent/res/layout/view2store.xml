<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt2store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name: " />

    <EditText
        android:id="@+id/edit2store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn2file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click2Store1"
            android:text="Store to Local File"
            style="?android:attr/buttonStyleSmall" />

        <Button
            android:id="@+id/btnRet4file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click2Store2"
            android:text="Retrieve from File"
            style="?android:attr/buttonStyleSmall" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn2sqlite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click2Store3"
            android:text="Store to Local DB"
            style="?android:attr/buttonStyleSmall" />

        <Button
            android:id="@+id/btnRet4sqlite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="click2Store4"
            android:text="Retrieve from DB"
            style="?android:attr/buttonStyleSmall" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="242dp"
            android:layout_height="418dp"
            android:text="hello" >
        </ListView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp" >

            <TextView
                android:id="@+id/return2Disp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/backFromStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="250dp"
        android:layout_marginTop="40dp"
        android:text="Back" />

</LinearLayout>