<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Add Cars" />
		
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >

		<TextView  
		    android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" 
			android:text="Make"
			android:layout_width="wrap_content">
			</TextView>
		<EditText android:id="@+id/editMaker1" android:layout_height="wrap_content"
			android:layout_width="match_parent">
			<requestFocus></requestFocus>
		</EditText>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >

		<TextView android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" android:text="Model"
			android:layout_width="wrap_content"></TextView>
		<EditText android:id="@+id/editModel1" android:layout_height="wrap_content"
			android:layout_width="match_parent">
			<requestFocus></requestFocus>
		</EditText>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >

		<TextView  android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" 
			android:text="Year"
			android:layout_width="wrap_content"></TextView>
		<EditText android:id="@+id/editYear1" 
		    android:layout_height="wrap_content"
			android:layout_width="match_parent">
			<requestFocus></requestFocus>
		</EditText>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
		<Button android:text="Insert" 
		    android:id="@+id/insert1" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"></Button>
		<Button android:text="Reset" 
		    android:id="@+id/reset1" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"></Button>
		    </LinearLayout>
	<TextView 
	    android:id="@+id/txtInserted" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"></TextView>
</LinearLayout>
